<%= simple_form_for @profile, url: profiles_path, method: :post do |f| %>
 <%= f.error_notification %>

<%if current_user.has_role?(:cliente) %>
 <%= f.collection_check_boxes(:role_ids, Role.where(name: 'vendedor'), :id, :name) do |b|
