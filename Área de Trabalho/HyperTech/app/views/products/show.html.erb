<%= alert %>


<%= render @product %>

<div class="botoes">
  <%= link_to "Editar esse Produto", edit_product_path(@product), class: "btn btn-warning" if policy(@product).update? %>  
  <%= button_to "Excluir esse Produto", @product, method: :delete, class:"btn btn-danger" if policy(@product).destroy? %> 
  <%= link_to "Voltar para Produtos", products_path, class: "btn btn-secondary" %> 
</div>

<h2 class="mt-3">Comentários:</h2>
<%= render @product.comments %>

<h2>Adicione um comentário:</h2>

<% if policy(:comment).create? %>
<%= render "comments/form"%>
<% else %>
<h3> Por favor, faça o login para criar um comentário. </h3>
<%end%>

