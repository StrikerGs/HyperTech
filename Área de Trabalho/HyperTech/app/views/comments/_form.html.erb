<%= simple_form_for [@product, @product.comments.build] do |f| %>
<%= f.error_notification %>
<div class="form-inputs">

<%= f.input :body,label: "Realize seu comentário", input_html: {rows: 5},  error: f.object.errors.full_messages_for(:body).to_sentence %>

</div>

<div class= "form-action">

<%= f.button :submit, "Fazer comentário" ,class: "btn btn-primary" %>

</div>
<% end %>