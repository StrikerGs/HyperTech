<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, local: true ,url: registration_path(resource_name),  data: {turbo: false}) do |f| %>
  <%= f.error_notification %>


  <div class="form-inputs">
    <%= f.input :username,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "nome" }%>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
                <br>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} caracteres minimos" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
